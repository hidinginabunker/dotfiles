# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Global defaults
[*]
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 80

[*.js]
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation override for Python
[*.py]
indent_style = space
indent_size = 4

# Tab indentation for Makefiles
[Makefile]
indent_style = tab
