[user]
	name = Gabriel Herrera
	email = gabriel.herrera@gmail.com
[core]
	editor = vim
	excludesfile = ~/.gitignore
  autocrlf = input
  safecrlf = true
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true
[color "branch"]
	current = red
	local = blue
	remote = cyan
[color "diff"]
	meta = magenta bold
	frag = magenta bold
	plain = green bold
	old = red bold
	new = yellow bold
[color "status"]
	header = magenta bold
	added = green bold
	updated = green bold
	changed = yellow bold
	untracked = red bold
[branch]
	autosetuprebase = always
[push]
	default = tracking
[alias]
  hist = log --pretty=format:\"%C(yellow)%h %Cgreen%ad %C(yellow)%ae%Creset %s%C(red)%d%Creset\" --graph --date=short
  s = status
  ph = push origin HEAD
  c = commit -m
